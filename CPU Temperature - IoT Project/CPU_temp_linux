import subprocess
import shlex
import time
import re
def measure_temp():
        temp = subprocess.Popen(shlex.split('sensors'),
                                stdout=subprocess.PIPE,
                                bufsize=10, universal_newlines=True)
        time.sleep(1)
        return temp.communicate()[0]
    
while True:
    str1=measure_temp().split()[9]
    print(int(re.findall('\d+', str1 )[0]))
